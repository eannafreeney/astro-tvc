---
import { getCollectionByRelease } from "../../utils/airtable";
import { unslugify } from "../../utils/common";
import {
  ProductsContainer,
  Product,
  CollectionsLinks,
} from "../../components/";
import Layout from "../../layouts/Layout.astro";

const { handle } = Astro.params;
const data = await getCollectionByRelease(handle);
---

<Layout>
  <CollectionsLinks />
  <ProductsContainer title={unslugify(handle)}>
    {data.map((product) => <Product product={product} />)}
  </ProductsContainer>
</Layout>
