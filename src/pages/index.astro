---
import { CollectionsLinks } from "../components";
import { homeCollections } from "@/constants/collections";
import Collection from "../components/Collection.astro";
import Layout from "../layouts/Layout.astro";
import Slides from "../components/Slides.astro";

export const prerender = true;
---

<Layout title="Home | The Velvet Cell">
  <Slides />
  <CollectionsLinks />
  {
    homeCollections.map((col) => (
      <Collection
        title={col.title}
        link={col.link}
        collection={col.collection}
      />
    ))
  }
</Layout>
