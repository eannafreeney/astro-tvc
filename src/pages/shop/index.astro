---
import { getAllAvailableBooksByRelease } from "../../utils/airtable.ts";
import Layout from "../../layouts/Layout.astro";
import { ProductsContainer, Product, CollectionsLinks } from "../../components";

const data = await getAllAvailableBooksByRelease();
export const prerender = true;
---

<Layout title="Shop | The Velvet Cell">
  <CollectionsLinks />
  <ProductsContainer title="Shop">
    {data.map((product, idx) => <Product product={product} key={idx} />)}
  </ProductsContainer>
</Layout>
