---
import { getTagCollectionByRelease } from "../../utils/airtable";
import { ProductsContainer, Product } from "../../components/";
import Layout from "../../layouts/Layout.astro";
import { unslugify } from "../../utils/common";

export async function getStaticPaths() {
  return [
    {
      params: { handle: "architecture" },
    },
  ];
}

const { handle } = Astro.params;
const data = await getTagCollectionByRelease(handle);
export const prerender = true;
---

<Layout>
  <ProductsContainer title={`#${unslugify(handle)}`}>
    {data.map((product) => <Product product={product} />)}
  </ProductsContainer>
</Layout>
